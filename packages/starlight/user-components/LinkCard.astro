---
import Icon from './Icon.astro';

interface Props {
  link: string;
  title: string;
  description?: string;
}

const { link, title, description } = Astro.props;
---

<a href={link} class="content">
  <span class="flex leading">
    <p class="flex title">
      <span set:html={title} />
    </p>
    {
      description && (
        <p class="description">
          <span set:html={title} />
        </p>
      )
    }
  </span>
  <Icon name="right-arrow" size="1.333em" />
</a>

<style>
  a {
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    padding: 1rem;
    text-decoration: none;
    color: var(--sl-color-gray-2);
    box-shadow: var(--sl-shadow-md);
    margin-top: 1.25em;
  }

  a:hover {
    background: var(--sl-color-gray-6);
    border-color: var(--sl-color-accent-high);
  }

  a :global(*) {
    color: var(--sl-color-gray-2);
  }

  .leading {
    flex-direction: column;
    gap: 0.5rem;
  }

  .title {
    color: var(--sl-color-white);
    font-weight: 600;
    font-size: var(--sl-text-lg);
    line-height: 120%;
    gap: 1rem;
    align-items: center;
  }

  .description {
    margin-top: 0 !important;
  }
</style>
