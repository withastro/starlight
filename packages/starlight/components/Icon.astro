---
import { Icons } from './Icons';

interface Props {
  name: keyof typeof Icons;
  label?: string;
  color?: string;
  size?: string;
  class?: string;
}

const { name, label, size = '1em', color = '' } = Astro.props;
const a11yAttrs = label
  ? ({ 'aria-label': label } as const)
  : ({ 'aria-hidden': 'true' } as const);
---

<svg
  {...a11yAttrs}
  class={Astro.props.class}
  width="16"
  height="16"
  viewBox="0 0 24 24"
  fill="currentColor"
  style={`--sb-icon-color: ${color}; --sb-icon-size: ${size};`}
  set:html={Icons[name]}
/>

<style>
  svg {
    color: var(--sb-icon-color, inherit);
    font-size: var(--sb-icon-size, 1em);
    width: 1em;
    height: 1em;
  }
</style>
