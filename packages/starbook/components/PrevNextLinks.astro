---
import type { Link } from '../utils/navigation';
import Icon from './Icon.astro';

interface Props {
  prev: Link | undefined;
  next: Link | undefined;
  dir: 'ltr' | 'rtl';
}

const { prev, next, dir } = Astro.props;
const isRtl = dir === 'rtl';
---

<div class="pagination-links" dir={dir}>
  {
    prev && (
      <a href={prev.href} rel="prev">
        <Icon name={isRtl ? 'right-arrow' : 'left-arrow'} size="1.5rem" />
        <span>
          Previous
          <br />
          <span class="link-title">{prev.label}</span>
        </span>
      </a>
    )
  }
  {
    next && (
      <a href={next.href} rel="next">
        <Icon name={isRtl ? 'left-arrow' : 'right-arrow'} size="1.5rem" />
        <span>
          Next
          <br />
          <span class="link-title">{next.label}</span>
        </span>
      </a>
    )
  }
</div>

<style>
  .pagination-links {
    display: flex;
    gap: 1rem;
  }

  a {
    display: flex;
    align-items: center;
    justify-content: start;
    gap: 0.5rem;
    width: 100%;
    border: 1px solid var(--sb-color-gray-5);
    border-radius: 0.5rem;
    padding: 1rem;
    text-decoration: none;
  }
  [rel='next'] {
    justify-content: end;
    text-align: end;
    flex-direction: row-reverse;
  }
  a:hover {
    border-color: var(--sb-color-gray-2);
  }

  .link-title {
    color: var(--sb-color-white);
    font-size: var(--sb-text-2xl);
    line-height: var(--sb-line-height-headings);
  }
</style>
